{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "make all",
            "options": {
                "cwd": "${workspaceFolder}\\build"
            }
        },
        {
            "label": "Clean and Build",
            "type": "shell",
            "group": "build",
            "command": "make clean; make all",
            "options": {
                "cwd": "${workspaceFolder}\\build"
            }
        },
        {
            "label": "Sim",
            "type": "shell",
            "command": "make run",
            "options": {
                "cwd": "${workspaceFolder}\\build"
            }
        },
        {
            "label": "GTKWave",
            "type": "process",
            "group": "test",
            "command": "gtkwave",
            "args": [
                "${workspaceFolder}\\build\\bin\\dump.vcd"
            ]
        }
    ]
}